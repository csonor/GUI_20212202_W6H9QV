<UserControl x:Class="ColorCross.UserControls.CustomImageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorCross.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightGray"
             >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10*"></RowDefinition>
			<RowDefinition Height="2*"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel>
			<Label Height="60"  FontWeight="Medium" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" Margin="0,20,0,0">CSAK BMP TÍPUSÚ FÁJLOKAT LEHET MEGNYITNI</Label>
			<Label Height="60"  FontWeight="Medium" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" Margin="0,50,0,0">Maximum méret 50x50</Label>
		</StackPanel>
		<Button FontSize="20" Margin="10" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Megnyitás" Name="btnOpenFile"  Click="btnOpenFile_Click" ></Button>
	</Grid>
</UserControl>
